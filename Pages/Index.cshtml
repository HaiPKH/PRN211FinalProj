@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "VIDL";
}

<div class="text-center">
    <h1 class="display-4">Welcome, please input URL here</h1>
    <form method = "post" asp-page = "Index">
    <input id = "url" type = "text" style = "width: 40%; margin-left: auto; margin-right: auto" asp-for="@Model.Url"/>
    <select id = "format" asp-for="@Model.Format">Select format:
        <option value = "mp3">.mp3</option>
        <option value = "mp4">.mp4</option>
    </select>
    <button type = "submit">Convert</button>
    </form>
    <iframe width="420" height="315"
        src="@Model.Url">
    </iframe>
</div>
